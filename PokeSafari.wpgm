program PokeSafari {
	game.title("Pokemon Safari")
	game.height(30)
	game.width(40)
	game.addVisual(pantallaDeInicio)
	pantallaDeInicio.iniciarAnimacion()
	const op = game.sound("opening.mp3")
	game.schedule(0,{op.play()})
	game.schedule(10000,{op.stop()})
	keyboard.enter().onPressDo({
	    juego.empezar()  // Inicia el juego
		game.boardGround("fondoSafari.jpg")
        nivel1.cargar()  // Carga el nivel despu√©s de empezar el juego
    })
	game.start()
}